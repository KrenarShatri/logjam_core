<div class="flex">
  <% max = fields.length %>
  <% fields.each do |name, value| -%>
    <% next if value.blank? -%>
    <div class="item col-8">
      <h2><%= hrn name %></h2>
      <%= name == "started_at" ? value.to_s.sub(/(\d)T(\d)/,'\1 \2').sub(/(\d)\+/, '\1 +') : value %>
    </div>
  <% end -%>
</div>


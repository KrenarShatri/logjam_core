<script type="text/javascript+protovis">
(function(){
<% data_with_colors = data.map{|d| d||0}.zip(colors) %>
var data = <%= raw data_with_colors.map(&:first).to_json %>;
var legend = <%= raw legend.to_json %>;

/* Sizing and scales. */
var w = <%= size rescue 100 %>,
    h = <%= size rescue 100 %>,
    r = w / 2,
    s = pv.sum(data),
    a = pv.Scale.linear(0, s).range(0, 2 * Math.PI);
    c = pv.colors(<%= raw data_with_colors.map(&:second).to_json %>).range();

/* The root panel. */
var vis = new pv.Panel()
    .width(w)
    .height(h);

/* The wedge, with centered label. */
vis.add(pv.Wedge)
    .data(data)
    .bottom(w / 2)
    .left(w / 2)
    .innerRadius(0)
    .outerRadius(r)
    .angle(a)
    .fillStyle(function(d) c[this.index])
    .title(function() legend[this.index])
//    .event("mouseover", function() this.innerRadius(0))
//    .event("mouseout", function() this.innerRadius(r - 20))
//  .anchor("center").add(pv.Label)
//    .visible(function(d) d > .15)
//    .textAngle(0)
//    .text(function(d) d.toFixed(2))
  .anchor("center").add(pv.Label)
    .visible(function(d) d/s > .1)
    .textAngle(0)
    .text(function(d) (100*d/s).toFixed()+"%");
;

vis.render();
})();
</script>

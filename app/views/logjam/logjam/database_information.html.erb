<%= render "header" %>
<div id="logjam-container">
  <%= render "sidebar" %>
  <div id="logjam-content" class="app-dashboard">
  <div class="flex">
    <div class="item col-1">
      <h2>Storage space for database <%= @db.name %></h2>
      <table>
        <tr>
          <th align="left" style="width:80px">Collection</th>
          <th align="right">Objects</th>
          <th align="right">Size (MB)</th>
          <th align="right">Storage Size (MB)</th>
          <th align="right">Index Size (MB)</th>
          <th align="right">Avg ObjectSize (KB)</th>
        </tr>
        <% @collstats.each do |name, stats| %>
          <tr>
            <td><%= name %></td>
            <td class="number"><%= integer_number(stats[:count]) %></td>
            <td class="number"><%= float_number(stats[:size].to_f / (1024*1024)) %></td>
            <td class="number"><%= float_number(stats[:storageSize].to_f / (1024*1024)) %></td>
            <td class="number"><%= float_number(stats[:totalIndexSize].to_f / (1024*1024)) %></td>
            <td class="number"><%= float_number(stats[:avgObjSize].to_f / (1024)) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
  </div>
</div>
